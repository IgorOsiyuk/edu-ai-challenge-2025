{
  "name": "robust-validation-library",
  "version": "1.0.0",
  "description": "A comprehensive JavaScript library for validating complex data structures with performance optimization and extensible architecture",
  "main": "base-template.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:report": "jest --coverage && echo 'Test coverage report generated in coverage/ directory' > test_report.txt && jest --coverage --verbose >> test_report.txt 2>&1",
    "validate": "node base-template.js",
    "lint": "eslint base-template.js validation.test.js",
    "docs": "jsdoc base-template.js -d docs/",
    "benchmark": "node benchmark.js"
  },
  "keywords": [
    "validation",
    "schema",
    "data-validation",
    "javascript",
    "es6",
    "type-checking",
    "form-validation",
    "api-validation"
  ],
  "author": "Validation Library Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "jsdoc": "^4.0.2",
    "benchmark": "^2.1.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "base-template.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/*.test.js"
    ],
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/example/robust-validation-library.git"
  },
  "bugs": {
    "url": "https://github.com/example/robust-validation-library/issues"
  },
  "homepage": "https://github.com/example/robust-validation-library#readme"
}
